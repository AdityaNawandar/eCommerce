<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_transparent">
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/appBlue</item>
    </style>

    <style name="checkboxStyle">
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="login_register_input" parent="button_transparent">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="sidebar_menu_item">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">40dp</item>
        <item name="backgroundColor">@color/appGreen</item>
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="settings_user_input" parent="login_register_input">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="shipping_address_user_input" parent="login_register_input">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="quantity_control">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="cart_quantity_control">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="cart_item">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>

    </style>

    <style name="address">
        <!--<item name="android:layout_marginTop">15dp</item>-->
        <!--<item name="android:layout_marginBottom">15dp</item>-->
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/appGreen</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="button_cart_pay" parent="Theme.ECommerce">
        <item name="android:background">@color/appGreen</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>

    </style>

    <style name="spinner">
        <item name="background">@drawable/drop_arrow_16</item>

    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/appBlue</item>
    </style>
    <style name="autocomplete_hint_color" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorHint">@color/appBlue</item>
    </style>


</resources>
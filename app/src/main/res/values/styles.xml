<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_transparent">
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/appBlue</item>
    </style>

    <style name="checkboxStyle">
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="login_register_input" parent="button_transparent">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>


</resources>